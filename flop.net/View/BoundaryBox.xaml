<UserControl x:Class="flop.net.View.BoundaryBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:flop.net.View"
             xmlns:models="clr-namespace:flop.net.Model"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=models:Figure}"
             Name="boundaryBox">
  <Grid>
    <Grid x:Name="ResizeGrid"
          Margin="10 -10 -10 -10">
      <Rectangle Width="10" Height="10" Fill="Blue" />
    </Grid>    
    <Polygon x:Name="hiddenBoundaryBox" 
             Points="{Binding Geometric.Points}" 
             Fill="Green"
             Opacity="0.5"/>
  </Grid>
</UserControl>
